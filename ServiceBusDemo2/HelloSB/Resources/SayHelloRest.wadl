<?xml version = '1.0' encoding = 'UTF-8'?>
<application xmlns:soa="http://www.oracle.com/soa/rest" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:client="http://xmlns.oracle.com/SOACSdemo/SayHello/MakeGreeting" xmlns="http://wadl.dev.java.net/2009/02">
   <doc title="SayHelloRest">RestService for  SayHello service</doc>
   <grammars>
      <schema xmlns="http://www.w3.org/2001/XMLSchema" xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/" xmlns:client="http://xmlns.oracle.com/SOACSdemo/SayHello/MakeGreeting" xmlns:plnk="http://docs.oasis-open.org/wsbpel/2.0/plnktype" xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/">
            <import namespace="http://xmlns.oracle.com/SOACSdemo/SayHello/MakeGreeting" schemaLocation="../WSDLs/XMLSchema_1997889778.xsd"/>
        </schema>
   </grammars>
   <resources>
      <resource path="/">
         <method name="GET" soa:wsdlOperation="process">
            <doc title="GET process">A Get service for SayHello service</doc>
            <request soa:paramElement="pns:process" xmlns:pns="http://xmlns.oracle.com/SOACSdemo/SayHello/MakeGreeting">
               <param name="your_name" style="query" soa:expression="$msg.payload/client:input" type="xsd:string"/>
            </request>
            <response status="200">
               <representation mediaType="application/json" element="cns:processResponse" xmlns:cns="http://xmlns.oracle.com/SOACSdemo/SayHello/MakeGreeting"/>
            </response>
         </method>
      </resource>
   </resources>
</application>
